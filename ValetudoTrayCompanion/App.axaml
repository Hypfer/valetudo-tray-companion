<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ValetudoTrayCompanion.ViewModels"
             x:Class="ValetudoTrayCompanion.App"
             x:DataType="vm:AppViewModel"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->


    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/logo.ico" ToolTipText="{Binding ToolTipText}">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Run on startup" />
                        <NativeMenuItem Header="Exit" Command="{Binding ExitCommand}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

</Application>